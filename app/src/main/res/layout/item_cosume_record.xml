<?xml version="1.0" encoding="utf-8"?>
<!--focusableInTouchMode只是测试鼠标效果-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w_580"
    android:layout_height="@dimen/h_694"
    android:focusableInTouchMode="true"
    android:layout_margin="0dp"
    android:paddingLeft="@dimen/w_40"
    android:focusable="true">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w_40"
        android:layout_marginTop="@dimen/h_80"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="人类简史"
        android:textColor="@color/selector"/>

    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w_40"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/h_60"
        android:gravity="left"
        android:text="购买成功"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w_30"
        android:layout_below="@id/order_status"
        android:layout_marginTop="@dimen/h_160"
        android:gravity="left"
        android:text="订单号:"
        android:textColor="@color/trans_white"/>
    <TextView
        android:id="@+id/valid_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w_30"
        android:layout_below="@id/order_no"
        android:layout_marginTop="@dimen/h_60"
        android:gravity="left"
        android:text="有效日期:"
        android:textColor="@color/trans_white"/>

    <TextView
        android:id="@+id/consume_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/w_30"
        android:layout_below="@id/valid_date"
        android:layout_marginTop="@dimen/h_60"
        android:gravity="left"
        android:text="订单日期:"
        android:textColor="@color/trans_white"/>
</RelativeLayout>